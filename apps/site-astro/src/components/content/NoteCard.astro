---
import type { PortableText as AstroPortableText } from "astro-portabletext";
import { Card, CardContent } from "../ui/card";
import PortableText from "@/components/PortableText/PortableText.astro";
import { cn } from "@/lib/utils";

type PortableTextProps = Parameters<typeof AstroPortableText>[0];

interface Props {
  body: PortableTextProps["value"];
  class?: string;
  prose?: "custom" | "note";
}

const { body, class: className, prose = "note" } = Astro.props;
const proseClass = prose === "note" ? "prose-note" : "prose-custom";
---

<Card className={cn("max-w-[40ch]", className)}>
  <CardContent>
    <div class={cn("trim-bottom mt-6", proseClass)}>
      <PortableText value={body} />
    </div>
  </CardContent>
</Card>
