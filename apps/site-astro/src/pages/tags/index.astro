---
import Layout from "@/layouts/Layout.astro";
import { getAllTagsList } from "@/queries/tag";
import TagsList from "@/components/content/TagsList.astro";
import { titleTemplate } from "@/lib/metadata";
import MetaTags from "@/components/MetaTags.astro";
import { getSanityTypeDisplayText } from "@/lib/sanityStrings";

const data = await getAllTagsList();
const title = getSanityTypeDisplayText("tag", true);
---

<Layout>
  <MetaTags
    title={titleTemplate(title)}
    description={"Browse all connnected content by tag"}
    slot="metadata"
  />

  <header class="prose-width content-container">
    <h1 class="h2">Browse content by tag</h1>
  </header>

  <main class="content-container prose-width" data-pagefind-ignore>
    <section>
      {data && <TagsList tags={data} asLinks={true} className="gap-4" />}
    </section>
  </main>
</Layout>
